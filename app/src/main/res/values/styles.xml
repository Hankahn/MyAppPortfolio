<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>
    
    <style name="AppButton">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/button_horizontal_padding</item>
        <item name="android:paddingBottom">@dimen/button_horizontal_padding</item>
        <item name="android:layout_marginTop">@dimen/button_horizontal_margin</item>
        <item name="android:layout_marginBottom">@dimen/button_horizontal_margin</item>
        <item name="android:layout_marginLeft">@dimen/button_vertical_margin</item>
        <item name="android:layout_marginRight">@dimen/button_vertical_margin</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="AppButtonOrange" parent="AppButton">
        <item name="android:background">@color/orange</item>
    </style>

    <style name="AppButtonRed" parent="AppButton">
        <item name="android:background">@color/red</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <color name="red">#FF0000</color>
    <color name="white">#FFFFFF</color>
</resources>
